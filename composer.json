{
  "name": "jakublech/converter",
  "type": "library",
  "description": "Handles converting php classes to other classes or formats",
  "keywords": [],
  "homepage": "https://smartbyte.pl",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Jakub Lech",
      "email": "info@smartbyte.pl"
    }
  ],
  "require": {
    "php": ">=8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3@dev",
    "friendsofphp/php-cs-fixer": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "JakubLech\\Converter\\": "src/",
      "JakubLech\\Converter\\Tests\\": "tests/"
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "scripts": {
    "test:cs-fixer": [
      "vendor/bin/php-cs-fixer fix --config=php-cs-fixer.php --dry-run --diff --allow-risky=yes"
    ],
    "test:unit": [
      "vendor/bin/phpunit --bootstrap ./tests/bootstrap.php  ./tests/"
    ],
    "fix:static": [
      "vendor/bin/php-cs-fixer fix --config=php-cs-fixer.php --diff --allow-risky=yes"
    ]
  },
  "minimum-stability": "dev"
}
